+
+int format_count = 0;
+struct format_info *formats = NULL;
+
+struct format_string_enum format_map[] = {
+   {"ARGB_8888", GBM_FORMAT_ARGB8888},
+   {"ABGR_8888", GBM_FORMAT_ABGR8888},
+   {"RGBA_8888", GBM_FORMAT_RGBA8888},
+   {"BGRA_8888", GBM_FORMAT_BGRA8888},
