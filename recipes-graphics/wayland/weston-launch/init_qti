### BEGIN INIT INFO
# Provides: weston
# Required-Start: $local_fs $remote_fs
# Required-Stop: $local_fs $remote_fs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
### END INIT INFO

if test -e /etc/default/weston ; then
        . /etc/default/weston
fi

killproc() {
        pid=`/bin/pidof $1`
        [ "$pid" != "" ] && kill $pid
}

launch_weston=`getprop persist.display.launch.weston.at.bootup`

read CMDLINE < /proc/cmdline
for x in $CMDLINE; do
        case $x in
        weston=false)
        echo "Weston disabled"
        exit 0;
                ;;
        esac
done

case "$1" in
  start)
        . /etc/profile

        # This is all a nasty hack
        if test -z "$XDG_RUNTIME_DIR"; then
            export XDG_RUNTIME_DIR=/dev/socket/weston
        fi

        if test -z "$XDG_PICTURES_DIR"; then
            export XDG_PICTURES_DIR=/data/misc/display
        fi

        if [[ -z "$SHELL" && -x "/bin/sh" ]]; then
            export SHELL=/bin/sh
        fi

        if [ -f /sys/devices/soc0/soc_id ]; then
            soc_id=`cat /sys/devices/soc0/soc_id`
            if [ "$soc_id" == 497 ] || [ "$soc_id" == 498 ]; then
                `setprop sdm.max_pipe_config 2`
            fi
        fi

        export PATH_DRM_NODE=/dev/dri
        filename_drm=$(find $PATH_DRM_NODE  -name 'card0' -print -quit )
        while  [ -z "$filename_drm" ]; do
            sleep 1
            filename_drm=$(find $PATH_DRM_NODE  -name 'card0' -print -quit )
        done

        echo "WESTON INITIALIZATION STARTUP"

        weston --idle-time=0 --continue-without-input &

        # Wait for wayland socket node to be created with a maximum of 100 attempts.
        attempts=0
        max_attempts=100

        filename=$(find $XDG_RUNTIME_DIR -maxdepth 1 -name 'wayland-*' -print -quit)
        while [ -z "$filename" ] && [ $attempts -lt $max_attempts ]; do
            sleep 0.1
            attempts=$((attempts + 1))
            filename=$(find $XDG_RUNTIME_DIR -maxdepth 1 -name 'wayland-*' -print -quit)
        done

        if [ -z "$filename" ]; then
            echo "Failed to find wayland socket after $max_attempts attempts."
        else
            echo "Found wayland socket: $filename"
            chown -hR system:video $XDG_RUNTIME_DIR
            chmod 776 /dev/socket/weston/wayland-1
        fi
  ;;

  stop)
        echo "Stopping Weston"
  ;;

  restart)
    $0 stop
        sleep 1
        $0 start
  ;;

  *)
        echo "usage: $0 { start | stop | restart }"
  ;;
esac

exit 0
