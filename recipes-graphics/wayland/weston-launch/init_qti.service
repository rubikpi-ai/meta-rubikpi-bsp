[Unit]
Description=Init-display Service
SourcePath=/etc/initscripts/init_qti_display
Requires=property-vault.service
After=property-vault.service sysinit.target local-fs.target
[Service]
User=root
Group=root
Restart=no
Type=simple
RemainAfterExit=yes
ExecStartPre=/bin/mkdir -p /dev/socket/weston
ExecStartPre=+/bin/sh -c 'if selinuxenabled && command -v restorecon >/dev/null 2>&1; then /sbin/restorecon -F /dev/socket/weston; fi'
ExecStartPre=+/bin/chmod 0700 /dev/socket/weston
# Create /dev/dri only if not present
ExecStartPre=+/bin/mkdir -p /dev/dri
ExecStartPre=+/bin/chmod 0755 /dev/dri
ExecStart=/etc/initscripts/init_qti_display start
ExecStop=/etc/initscripts/init_qti_display stop

[Install]
WantedBy=multi-user.target
