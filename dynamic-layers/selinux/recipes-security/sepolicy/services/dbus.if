#######################################
## <summary>
##	Allow dbus IPC
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`dbus_ipc',`
	gen_require(`
		type system_dbusd_runtime_t;
		type system_dbusd_t;
                class dbus {send_msg acquire_svc};
	')

	allow $1 system_dbusd_runtime_t:dir search_dir_perms;
	allow $1 system_dbusd_runtime_t:sock_file write;
	allow $1 system_dbusd_t:unix_stream_socket connectto;
	allow $1 system_dbusd_t:dbus {send_msg acquire_svc};
')

########################################
## <summary>
##      Allow the specified domain to connect to
##      dbus with an unix stream socket.
## </summary>
## <param name="domain">
##      <summary>
##      Domain allowed access.
##      </summary>
## </param>
#
interface(`dbus_connect_to_stream_socket',`
    gen_require(`
        type system_dbusd_t;
    ')
    allow $1 system_dbusd_t:unix_stream_socket connectto;
')
