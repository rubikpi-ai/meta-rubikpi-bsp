export MODULE_BASE=/usr/lib/modules/
set -e

case "$1" in
    start)
	echo -n "Starting/Loading display module: "

	echo "display:start/load" > /dev/kmsg
	insmod $MODULE_BASE/msm_drm.ko $2

	echo "done loading display_kernel module"
	timeperiod=0
	until [ -d /sys/class/backlight/panel0-backlight ] || [ $timeperiod -gt 20 ]
	do
		sleep 0.1
		((timeperiod++))
	done
	chown -h system:system /sys/class/backlight/panel0-backlight/brightness
	chown -h system:system /sys/class/backlight/panel0-backlight/max_brightness
	echo "Ownership changed to system for panel brightness nodes"
	;;
    stop)
	echo -n "Bypassing Unloading of  display_kernel modules "
	;;
    restart)
	$0 stop
	$0 start
	;;
    *)
	echo "Usage { start | stop | restart}" >&2
	exit 1
	;;
esac

exit 0



